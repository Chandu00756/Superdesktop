# Omega Super Desktop Console - Environment Configuration Example
# Copy this file to .env and update the values for your deployment

# Security Configuration
OMEGA_SECRET_KEY=your-super-secret-key-change-this-in-production
OMEGA_ADMIN_PASSWORD=your-secure-admin-password

# Database Configuration
OMEGA_DB_URL=postgresql://omega:omega_secure_2025@localhost/omega_db
# Alternative SQLite fallback:
# OMEGA_DB_URL=sqlite:///./omega_prototype.db

# Redis Configuration
OMEGA_REDIS_URL=redis://localhost:6379
# With password:
# OMEGA_REDIS_URL=redis://:omega_secure_2025@localhost:6379

# Server Configuration
OMEGA_HOST=0.0.0.0
OMEGA_PORT=8443
OMEGA_ENV=production
OMEGA_LOG_LEVEL=INFO

# SSL/TLS Configuration (for production)
OMEGA_SSL_CERT_FILE=security/certs/server.crt
OMEGA_SSL_KEY_FILE=security/certs/server.key
OMEGA_SSL_CA_FILE=security/certs/ca.crt

# GPU Configuration (optional)
CUDA_VISIBLE_DEVICES=0,1
OMEGA_ENABLE_GPU=true

# Monitoring Configuration
OMEGA_PROMETHEUS_PORT=8000
OMEGA_METRICS_ENABLED=true

# Session Configuration
OMEGA_SESSION_TIMEOUT_HOURS=8
OMEGA_MAX_SESSIONS_PER_USER=10

# Network Configuration
OMEGA_ALLOWED_ORIGINS=*
OMEGA_CORS_ENABLED=true